<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:foregroundTint="@color/purple_700"
    tools:context="MainActivity">


    <TextView
        android:id="@+id/tobi_frage"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_color"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:text="Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/tobi_button_eins"

        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_above="@+id/tobi_button_zwei"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="168dp"
        android:backgroundTint="@color/primary_color"
        android:backgroundTintMode="screen"
        android:includeFontPadding="true"
        android:insetLeft="4dp"
        android:insetTop="8dp"
        android:insetRight="4dp"
        android:insetBottom="8dp"
        android:minEms="15"
        android:onClick="answereins"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toTopOf="@+id/tobi_button_zwei"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tobi_frage"
        app:style="@style/Widget.AppCompat.Button.Small" />

    <Button
        android:id="@+id/tobi_button_zwei"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_above="@+id/tobi_button_drei"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/primary_color"
        android:backgroundTintMode="screen"
        android:includeFontPadding="true"
        android:insetLeft="4dp"
        android:insetTop="8dp"
        android:insetRight="4dp"
        android:insetBottom="8dp"
        android:minEms="15"
        android:onClickListener="answerzwei"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toTopOf="@+id/tobi_button_drei"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tobi_button_eins" />

    <Button
        android:id="@+id/tobi_button_drei"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_above="@+id/tobi_button_vier"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="103dp"
        android:backgroundTint="@color/primary_color"
        android:backgroundTintMode="screen"
        android:includeFontPadding="true"
        android:insetLeft="4dp"
        android:insetTop="8dp"
        android:insetRight="4dp"
        android:insetBottom="8dp"
        android:minEms="15"
        android:onClickListener="answerdrei"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toTopOf="@+id/tobi_button_vier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tobi_button_zwei" />

    <Button
        android:id="@+id/tobi_button_vier"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="65dp"
        android:backgroundTint="@color/primary_color"
        android:backgroundTintMode="screen"
        android:includeFontPadding="true"
        android:insetLeft="4dp"
        android:insetTop="8dp"
        android:insetRight="4dp"
        android:insetBottom="8dp"
        android:minEms="15"
        android:onClickListener="answervier"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:iconTint="@android:color/holo_blue_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tobi_button_drei" />

</androidx.constraintlayout.widget.ConstraintLayout>